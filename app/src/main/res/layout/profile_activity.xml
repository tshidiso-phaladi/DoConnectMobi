<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent">

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:layout_below="@+id/txt_Patient_ID"
        android:layout_alignEnd="@+id/txt_Patient_ID"
        android:id="@+id/txt_FirstName" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:layout_below="@+id/txt_FirstName"
        android:layout_alignEnd="@+id/txt_FirstName"
        android:id="@+id/txt_LastName" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:layout_below="@+id/txt_LastName"
        android:layout_alignEnd="@+id/txt_LastName"
        android:id="@+id/txt_ID_Number" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:layout_below="@+id/txt_ID_Number"
        android:layout_alignEnd="@+id/txt_ID_Number"
        android:id="@+id/txt_Gender" />

    <TextView
        android:text="Date Of Birth:"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/lbl_DOB"
        android:layout_alignBaseline="@+id/txt_DOB"
        android:layout_alignBottom="@+id/txt_DOB"
        android:layout_alignStart="@+id/lbl_Gender" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:id="@+id/txt_DOB"
        android:layout_below="@+id/txt_Gender"
        android:layout_alignStart="@+id/txt_Gender" />

    <TextView
        android:text="Gender"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/lbl_Gender"
        android:layout_alignBaseline="@+id/txt_Gender"
        android:layout_alignBottom="@+id/txt_Gender"
        android:layout_alignStart="@+id/lbl_ID_Number" />

    <TextView
        android:text="ID Number:"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/lbl_ID_Number"
        android:layout_alignBaseline="@+id/txt_ID_Number"
        android:layout_alignBottom="@+id/txt_ID_Number"
        android:layout_alignStart="@+id/lbl_LastName" />

    <TextView
        android:text="Last Name:"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/lbl_LastName"
        android:layout_alignBaseline="@+id/txt_LastName"
        android:layout_alignBottom="@+id/txt_LastName"
        android:layout_alignStart="@+id/lbl_FirstName" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="text|textPersonName"
        android:ems="10"
        android:id="@+id/txt_Patient_ID"
        android:layout_below="@+id/Main"
        android:layout_toEndOf="@+id/lbl_DOB"
        android:layout_marginStart="30dp" />

    <LinearLayout
        android:id="@+id/Main"
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="#00000000"
        android:layout_gravity="center"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true">
            <ImageView
                android:id="@+id/profile_pic"
                android:layout_width="96dp"
                android:layout_height="89dp"
                android:src="@drawable/profilepic"
                android:layout_gravity="center" />

    </LinearLayout>

    <TextView
        android:text="First Name:"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/lbl_FirstName"
        android:layout_alignBaseline="@+id/txt_FirstName"
        android:layout_alignBottom="@+id/txt_FirstName"
        android:layout_alignParentStart="true"
        android:layout_marginStart="20dp" />

    <TextView
        android:text="Patient ID:"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/lbl_Patient_ID"
        android:layout_alignBaseline="@+id/txt_Patient_ID"
        android:layout_alignBottom="@+id/txt_Patient_ID"
        android:layout_alignStart="@+id/lbl_FirstName" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:id="@+id/txt_Cell_Number"
        android:layout_below="@+id/txt_DOB"
        android:layout_alignStart="@+id/txt_DOB" />

    <TextView
        android:text="Cell Number:"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/lbl_Cell_Number"
        android:layout_alignBaseline="@+id/txt_Cell_Number"
        android:layout_alignBottom="@+id/txt_Cell_Number"
        android:layout_alignStart="@+id/lbl_DOB" />

    <Button
        android:text="Load Profile"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txt_Cell_Number"
        android:layout_alignStart="@+id/txt_Cell_Number"
        android:id="@+id/btn_LoadProfile" />


</RelativeLayout>
